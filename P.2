import java.util.Random;
import java.util.Scanner;


public class Main{
  public static void main(String[] args){
    int[][] Bingo = new int[5][5];
    String[][] Choose = new String[5][5];
    Random ran = new Random();
    Scanner scan = new Scanner(System.in);

    int i, j, select;
    int count = 0;


    // 빙고판 생성
    for(i =0;i<Bingo.length;i++){
      for(j = 0; j<Bingo[i].length;j++){
        Bingo[i][j] = ran.nextInt(25)+1;
      }
    }
    
    // 여기서 부터 출력문
    while(true){
        count++;
        System.out.println("==============");
        for(i =0;i<Bingo.length;i++){
            for(j = 0; j<Bingo[i].length;j++){
                if(Choose[i][j] == null)
                System.out.printf("%2d ",Bingo[i][j]);
                else if(Choose[i][j] != null)
                System.out.printf("%s", Choose[i][j]);
            }
            System.out.println("");
        }
        System.out.println("==============");
        
        switch(count%2){
        
            case 0:{
                select = ran.nextInt(25)+1;
                
                for(i =0;i<Bingo.length;i++){
                    for(j = 0; j<Bingo[i].length;j++){
                        if(select == Bingo[i][j]){
                            if(Choose[i][j] == null)
                                Choose[i][j] = " O ";
                            else
                                select = ran.nextInt(25)+1;
                        }
                    }
                }
                
                System.out.println("Computer는 "+ select+"을 선택했습니다.");
                break;
            }
        
            case 1:{
                System.out.print("숫자를 선택하세요 (User) : ");
                select = scan.nextInt();
                
                for(i =0;i<Bingo.length;i++){
                    for(j = 0; j<Bingo[i].length;j++){
                        if(select == Bingo[i][j]){
                            if(Choose[i][j] == null)
                                Choose[i][j] = " X ";
                            else{
                                System.out.print("숫자를 다시 선택하세요 (User) : ");
                                select = scan.nextInt();
                            }
                        }
                    }
                }
                break;
            }
        
        }
    
    }
  }
}


