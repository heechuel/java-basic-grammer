public class Main{
    int radius;
    String name;
    
    public Main(){// 매개 변수 없는 생성자 
        radius = 1; name = "";
    }
    
    public Main(int i, String n){
        radius = i; 
        name = n;
    }
    
    public double getArea(){
        return 3.14*radius*radius;
    }
    
    public static void main(String[] args)
    {
        Main pizza = new Main(10, "자바 피자");
        double area = pizza.getArea();
        System.out.println(pizza.name+" 의 면적은 "+ area);
        
        Main dount = new Main();
        dount.name = "자바 도넛";
        area = dount.getArea();
        System.out.println(dount.name+" 의 면적은 "+ area);
        
    }
    }
