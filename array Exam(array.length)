import java.util.Scanner;


public class Main
{
	public static void main(String[] args) {
	    
	   Scanner scan = new Scanner(System.in);
	   
	   int[] array;
	   int len = 0;
	   int aver = 0;
	   
	   System.out.print("입력할 과목의 개수는? : ");
	   len = scan.nextInt();
	   
	   array = new int[len];
	   
	   for(int i = 0; i<array.length; i++)
	   {
	       System.out.print("과목 " + (i+1) + "의 점수를 입력 : ");
	       array[i] = scan.nextInt();
	       aver += array[i];
	   }
	   
	   System.out.println("과목 "+len+" 개의 평균 점수는 = "+ (double)aver/array.length);
	   
	   scan.close();
	}
}

